<resources>


    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="DialogTheme" parent="@style/AppTheme.GradientStatusBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.GradientStatusBar" parent="@style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="listPreferredItemHeightSmall">56dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SelectableItemBackgroundround" parent="">
        <item name="android:theme">@style/SelectableItemThemeround</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="SelectableItemPreview" parent="">
        <item name="android:theme">@style/SelectableItemThemeroundP</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="SelectableItemRipple" parent="">
        <item name="android:theme">@style/SelectableItemrippleaa</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="SelectableItemThemeround" parent="">
        <item name="colorControlHighlight">#20ffffff</item>
    </style>
    <style name="SelectableItemThemeroundP" parent="">
        <item name="colorControlHighlight">#20ffffff</item>
    </style>
    <style name="SelectableItemrippleaa" parent="">
        <item name="colorControlHighlight">#20ffffff</item>
    </style>

    <style name="button_footer" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="horizontalScoolbar" parent="">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbHorizontal">@color/icon_color</item>
        <item name="android:scrollbars">horizontal</item>
    </style>
    <style name="horizontal_container_style" parent="">
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:orientation">@null</item>
        <item name="android:background">@color/horizontal_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="menu_dialog_button_style" parent="">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="select_image_theme" parent="">
        <item name="android:windowBackground">@color/select_image_dialog_color</item>
    </style>
    <style name="tablerow_style" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">@dimen/adjustment_row_margin_bottom</item>
    </style>
    <style name="textview_style" parent="">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="verticalScoolbar" parent="">
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarThumbHorizontal">@color/icon_color</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="viewflipper_item_style" parent="">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:background">@color/color_table</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
    <style name="MyRadioButton" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/app_color</item>
        <item name="colorControlNormal">@color/icon_color</item>
    </style>
</resources>
