<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llStickerMain"
    android:background="@color/bottom_back"
    android:padding="@dimen/_7sdp"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/bottom_back"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <View
            android:id="@+id/color_picker_view"
            android:background="@color/yellow_color_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/color_select_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/border_rectangle"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/colorPickerView"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_select_color"
            android:layout_centerInParent="true"
            style="@style/SelectableItemBackgroundround" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
