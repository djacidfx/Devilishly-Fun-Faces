<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llStickerMain"
    android:background="@color/bottom_back"
    android:padding="@dimen/_7sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/bottom_back"
        app:cardCornerRadius="7sp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <View
            android:layout_gravity="center"
            android:id="@+id/color_picker_view"
            android:background="@color/yellow_color_picker"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/color_select_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/border_rectangle" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/colorPickerView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_select_color"
            android:layout_centerInParent="true" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
